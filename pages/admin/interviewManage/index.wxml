<!--pages/admin/interviewManage/index.wxml-->
<view class="flex-sub text-center" wx:if="{{!queueList.length || queueList[0] == ''}}">
    <view class="solid-bottom text-xsl padding">
        <text class=" cuIcon-roundcheckfill text-green"></text>
    </view>
    <view class="padding">当前还没有人排队哦</view>
    <view class='padding' style='padding-bottom:170rpx;'>
        <button class='cu-btn bg-blue lg shadow' style='width:400rpx' bindtap='back'>返回</button>
    </view>
</view>
<view wx:else style='width:100%'>
    <view class="cu-capsule round padding">
        <view class="cu-tag bg-blue ">
            当前排队人数
        </view>
        <view class="cu-tag line-blue">
            {{queueList.length}}
        </view>
    </view>
    <view class="cu-avatar-group">
        <view class="cu-avatar round lg" wx:for="{{queueListInfo}}" wx:key style="background-image:url({{item.avatarUrl}});" wx:if="{{index >= queueListInfo.length - 5}}"></view>
    </view>
    <view class="cu-card dynamic {{isCard?'no-card':''}}">
        <view class="cu-item shadow">
            <view class="cu-list menu-avatar">
                <view class="cu-item">
                    <view class="cu-avatar round lg" style="background-image:url({{queueListInfo[queueListInfo.length-1].avatarUrl}});"></view>
                    <view class="content flex-sub">
                        <view>{{queueListInfo[queueListInfo.length-1].name}}
                            <view class='fr margin-left'>
                                <button class=' cu-btn bg-red sm round shadow'>
                                    <text class='cuIcon-deletefill lg text-white'></text> 过号
                                </button>
                            </view>
                        </view>
                        <view class="text-gray text-sm flex justify-between">
                            {{queueListInfo[queueListInfo.length-1].major}}{{queueListInfo[queueListInfo.length-1].klass}}
                        </view>
                    </view>
                </view>
            </view>
            <view class="text-content">
                {{queueListInfo[queueListInfo.length-1].introduction}}
            </view>
            <view class='fl padding'>
                <button class='cu-btn bg-blue round shadow' bindtap='startRecord' wx:if='{{!isRecording}}'>
                    <text class='cuIcon-voicefill lg text-white'></text> 开始录音
                </button>
                <button class='cu-btn bg-red round shadow' wx:else>
                    <text class='cuIcon-voicefill lg text-white'></text>
                </button>
            </view>
            <view class='fr padding'>
                <button class='cu-btn bg-green round shadow' bindtap='completeInterview'>
                    面试完成
                </button>
            </view>
            
        <view class="cu-form-group margin-top" style='width:100%;'>
            <textarea maxlength="-1" bindinput="textareaInput" placeholder="这里可以写下对该同学的评价哦" value='{{remark}}'></textarea>
        </view>
        </view>

    </view>
</view>