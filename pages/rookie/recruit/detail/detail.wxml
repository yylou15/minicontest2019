<!--pages/rookie/recruit/detail/detail.wxml-->
<view class="bg-img bg-mask padding-tb-xl" style="background-image: url('https://ossweb-img.qq.com/images/lol/web201310/skin/big10006.jpg');height: 340rpx;">
    <view class="padding-xl text-white">
        <view class="padding-xs text-xl">
            {{signInfo.name}}
        </view>
        <view class="padding-xs">
            {{orgName}}
        </view>
    </view>
</view>

<view class="cu-bar justify-center">
    <view class="action sub-title">
        <text class="text-xl text-bold text-blue">招新介绍</text>
        <text class="text-ABC text-blue">about</text>
        <!-- last-child选择器-->
    </view>
</view>


<view class=" padding-xs flex align-center">
    <view class="flex-sub text-center solid-top">
        <view class="padding">
            {{signInfo.introduction}}
        </view>
    </view>
</view>

<view class="cu-bar justify-center">
    <view class="action sub-title">
        <text class="text-xl text-bold text-blue">招新要求</text>
        <text class="text-ABC text-blue">require</text>
        <!-- last-child选择器-->
    </view>
</view>

<view class=" padding-xs flex align-center">
    <view class="flex-sub text-center solid-top">
        <view class="padding">
            <!--for循环 要求-->
            <view style='padding-bottom:20rpx' wx:if="{{signInfo.requirements.length}}" wx:for="{{signInfo.requirements}}"> {{index + 1}}.{{item}}</view>
        </view>
    </view>
</view>

<view class="cu-bar justify-center">
    <view class="action sub-title">
        <text class="text-xl text-bold text-blue">预计招新人数</text>
        <text class="text-ABC text-blue">PEOPLE</text>
        <!-- last-child选择器-->
    </view>
</view>
<view class=" padding-xs flex align-center">
    <view class="flex-sub text-center solid-top">
        <view class="padding">
            <view>{{signInfo.total_planned}}人</view>
        </view>
    </view>
</view>





<view class="cu-bar justify-center">
    <view class="action sub-title">
        <text class="text-xl text-bold text-blue">笔试/面试时间&地点</text>
        <text class="text-ABC text-blue">Exam</text>
        <!-- last-child选择器-->
    </view>
</view>

<view class=" padding-xs flex align-center">
    <view class="flex-sub text-center solid-top">
        <view class="padding">
            <!--for循环 要求-->
            <view style='padding-bottom:20rpx'>{{signInfo.interviews[0].time}}</view>
            <view>{{signInfo.interviews[0].place}}</view>
            <!--<view>待定</view>-->
        </view>
    </view>
</view>



<view class="padding flex flex-direction align-center" bindtap='sign'>
    <button class="cu-btn bg-blue margin-tb-sm lg" style='width:400rpx' disabled='{{hasSigned}}'>
        {{hasSigned?'已报名':'报名'}}
    </button>
</view>