<!--pages/rookie/recruit/quesitionaire/question.wxml-->
<form>
<view class="cu-bar ">
  <view class="action">
    <text class="cuIcon-title text-green"></text>
    <text>个人信息</text>
  </view>
</view>
	<view class="cu-bar bg-white">
		<view class="action">
			证件照
		</view>
	</view>
	<view class="cu-form-group">
		<view class="grid col-4 grid-square flex-sub">
			<view class="bg-img" wx:for="{{imgList}}" wx:key="{{index}}" bindtap="ViewImage" data-url="{{imgList[index]}}">
				<image src='{{imgList[index]}}' mode='aspectFill'></image>
				<view class="cu-tag bg-red" catchtap="DelImg" data-index="{{index}}">
					<text class="cuIcon-close"></text>
				</view>
			</view>
			<view class="solids" bindtap="ChooseImage" wx:if="{{imgList.length<1}}">
				<text class="cuIcon-cameraadd"></text>
			</view>
		</view>
	</view>


	<view class="cu-form-group">
		<view class="title">姓名</view>
		<input placeholder="" value='{{name}}'></input>
	</view>
		<view class="cu-form-group">
		<view class="title">学号</view>
		<input placeholder="" value='{{num}}'></input>
	</view>
	<view class="cu-form-group">
		<view class="title">学院</view>
		<input placeholder="" value='{{academy}}'></input>
	</view>
    <view class="cu-form-group">
		<view class="title">专业班级</view>
		<input placeholder="" value='{{major}}'></input>
	</view>
  <!--
  	</view>
    <view class="cu-form-group">
		<view class="title"></view>
		<input placeholder="" value='{{}}'></input>
	</view>-->
  <view class="cu-form-group align-start">
		<view class="title">自我介绍</view>
		<textarea maxlength="-1" disabled="{{modalName!=null}}" bindinput="textareaBInput" placeholder="介绍一下自己吧~"></textarea>
	</view>

  <view class="cu-bar ">
  <view class="action">
    <text class="cuIcon-title text-green"></text>
    <text>问题</text>
  </view>
</view>

  <view class="cu-bar bg-white ">
 <view class="action ">
    <text>1.为什么楼远洋那么帅？</text>
  </view>
</view>
	<view class="cu-form-group">
		<input placeholder="请输入你的回答" value=''></input>
	</view>

  <view class="cu-bar bg-white ">
 <view class="action ">
    <text>2.为什么楼远洋那么帅？</text>
  </view>
</view>
	<view class="cu-form-group">
		<input placeholder="请输入你的回答" value=''></input>
	</view>

   <view class="padding flex flex-direction align-center">
  <button class="cu-btn bg-blue margin-tb-sm lg" style='width:400rpx'>提交</button>
</view>
  </form>


